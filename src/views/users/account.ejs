<%- include('../partials/head', {styles:['login', 'account', 'headerfooter'], title: 'Ingresar'}) %>

<body>
  
  <%- include('../partials/header') %>

    <main class="main-login">
      <div class="login">
        <h1 class="login-heading">MI CUENTA</h1>

       <div class="account-info">
        <div class="profile-pic-container">

          <img class="profile-pic" src="/img/users/profile/<%=locals.user.avatar%>" alt="">
        </div>
        <div class="account-data">
          <p>Nombre</p>
          <p class="data"><%= locals.user.first_name %> <%= locals.user.last_name %></p>
          <p>Fecha de Nacimiento</p>
          <p class="data"><%= new Date(locals.user.birth_date).toISOString().split('T')[0] %></p>
          <p>Email</p> 
          <p class="data"><%= locals.user.email %></p>
        </div>
       </div>
       <div class="ButtonContainer">
       <button class="EditButton" onclick="window.location.href='/users/<%= user.id %>/edit'">Editar Perfil</button>
      </div>
      </div>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>