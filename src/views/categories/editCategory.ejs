<%- include('../partials/head', {styles:['editCategory', 'headerfooter'], title: 'Nueva Categoria'}) %>
<body>
    <%- include('../partials/header') %>
	<div class="containerForm">
		<div class="row">
			<div class="formTitle">
				<h1 class="title">Modificar Categoria</h2>
			</div>
		</div>
		<div class="formCreateP">
			<form class="form-box" action="/categories/<%= categoryToEdit.id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
				<div class="rowFormP">
					<div class="formName">
						<label for="name" class="form-label">Estas modificando la categoría: <%=categoryToEdit.name %></label>
						<input type="text" id="name" name="name" placeholder="Ingrese el nuevo nombre" class="form-input">
					</div>
					<div class="formEditButton">
						<button type="submit" class="edit-btn">Guardar Cambios</button>
					</div>
				</div>
				<div class="link-categories">
					<a href="/categories">Ver todas las Categorías</a>
				</div>
			</form>

		</div>
	</div>
    <%- include('../partials/footer') %>
</body>	
</html>